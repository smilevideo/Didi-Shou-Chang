pipeline {
    agent any
    options {
        timestamps ()
    }

    parameters {
        string(name: 'BRANCH', defaultValue: 'main', description: "Branch to check out")
        boolean(name: 'TRIGGER_DOWNSTREAM_JOBS', defaultValue: true, description: "Flag to trigger downstream jobs. Primarily used for testing/sandbox")
    }

    stages {
        stage('Build/Deploy') {
            when {
                expression {
                    return TRIGGER_DOWNSTREAM_JOBS
                }
            }
            parallel {
                stage('Deploy Client') {
                    steps {
                        script {
                            build job: 'dsc_front', wait: false
                        }
                    }

                }
                stage('Deploy Server') {
                    steps {
                        script {
                            build job: 'dsc_back', wait: false
                        } 
                    }
                }
                stage('Deploy S3 Client') {
                    steps {
                        script {
                            build job: 'dsc_s3', wait: false
                        }
                    }
                }
            }
        }
    }

    post {
        success {
            cleanWs(deleteDirs: true)
        }
    }
}
